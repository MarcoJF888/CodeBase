<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="25dp">

        <ImageView
            android:id="@+id/imgleft"
            android:layout_width="18sp"
            android:layout_height="18sp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/txtLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgleft"
            android:layout_toEndOf="@+id/imgleft"
            android:layout_marginStart="10dp" />


        <ImageView
            android:id="@+id/imgRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_next_page"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/txtRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:padding="0dp"
            android:layout_alignTop="@+id/txtLeft"
            android:layout_toLeftOf="@+id/imgRight"
            android:layout_toStartOf="@+id/imgRight"
            android:layout_marginRight="6dp"
            />
    </RelativeLayout>
</LinearLayout>
            android:layout_marginLeft="8dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:maxLength="16"
            android:gravity="left"/>
    </LinearLayout>
    <View

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:background="@mipmap/bg_green_gradient">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/txtNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="40sp"
                        android:textColor="@color/white"
                        android:text="88"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/txtNum"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:paddingTop="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:text="次/分"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:text="平均静息心率"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/white"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txtLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="最近一次"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"/>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtLabel"
                            android:layout_marginTop="2dp"
                            android:layout_centerHorizontal="true">
                            <TextView
                                android:id="@+id/txtRecently"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="96"
                                android:textColor="@color/white"
                                android:textSize="20sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="次/分"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:layout_marginTop="10dp"
                                android:layout_centerHorizontal="true"
                                android:layout_toRightOf="@+id/txtRecently"
                                android:layout_alignBaseline="@+id/txtRecently"/>
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txtLabel1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="最小心率"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"/>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtLabel1"
                            android:layout_marginTop="2dp"
                            android:layout_centerHorizontal="true">
                            <TextView
                                android:id="@+id/txtMin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="65"
                                android:textColor="@color/white"
                                android:textSize="20sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="次/分"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:layout_marginTop="10dp"
                                android:layout_centerHorizontal="true"
                                android:layout_toRightOf="@+id/txtMin"
                                android:layout_alignBaseline="@+id/txtMin"/>
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txtLabel2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="最大心率"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"/>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtLabel2"
                            android:layout_marginTop="2dp"
                            android:layout_centerHorizontal="true">
                            <TextView
                                android:id="@+id/txtMax"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="111"
                                android:textColor="@color/white"
                                android:textSize="20sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="次/分"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:layout_marginTop="10dp"
                                android:layout_centerHorizontal="true"
                                android:layout_toRightOf="@+id/txtMax"
                                android:layout_alignBaseline="@+id/txtMax"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/revHrContinuity"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txtTie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="贴"
        android:textColor="#000000"
        android:layout_marginTop="45dp"
        android:textSize="70sp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtBiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:textSize="70sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtTie"/>

    <TextView
        android:id="@+id/txtJi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="机"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:textSize="70sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtBiao"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txtCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXXXXXXXX有限公司 "
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_above="@+id/txtCompany1"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/txtCompany1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXXXXXXXXXXX有限公司"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="1dp"
            android:layout_above="@+id/txtLabel"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/txtLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版权所有"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="1dp"
            android:layout_above="@+id/layoutVersion"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/layoutVersion"
            android:layout_marginTop="1dp"
            android:layout_above="@+id/txtAllRightsReserved"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="Copyright"
                android:layout_marginRight="1dp"/>

            <ImageView
                android:id="@+id/imgVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="2016"
                android:layout_marginLeft="1dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtAllRightsReserved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="14sp"
            android:text="All Rights Reserved"
            android:layout_marginTop="1dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="17dp"/>
    </RelativeLayout>


</RelativeLayout>
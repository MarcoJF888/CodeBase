<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txtLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请按照下图的方法正确佩戴手表并将双指放在表壳电极片上,点击下一步开始校准"
        android:textSize="14sp"
        android:textColor="@color/txt_color_main"
        android:layout_marginLeft="20dp"
        android:gravity="center_horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:id="@+id/imgLabel"
        android:layout_below="@+id/txtLabel"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:src="@mipmap/icon_guide"/>

    <RelativeLayout
        android:layout_below="@+id/imgLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"

            android:textSize="@dimen/btn_txt_size"
            android:textColor="@color/textcolor_white_selector"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"

            android:background="@drawable/icon_button"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一步"

            android:textSize="@dimen/btn_txt_size"
            android:textColor="@color/textcolor_white_selector"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="80dp"
            android:paddingLeft="80dp"

            android:background="@drawable/icon_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="15dp" />
    </RelativeLayout>
</RelativeLayout>
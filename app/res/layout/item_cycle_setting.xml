<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_centerVertical="true">

    <TextView
        android:id="@+id/txtName"
        android:text="@string/set_sound_vibrate"
        android:textColor="@color/txt_color_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dialog_item_size"
        android:padding="@dimen/dialog_item_padding_height"/>


    <ImageView
        android:id="@+id/imgSeletIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        />

    <View
        android:layout_below="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#C9CDCC" />

</RelativeLayout>
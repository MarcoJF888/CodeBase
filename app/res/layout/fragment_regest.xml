<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="用户名："
            style="@style/txt_style_content_black"
            />

        <EditText
            android:id="@+id/eTxtPhoneNo"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:background="@null"
            android:hint="请输入11位手机号码"
            android:inputType="number"
            android:layout_marginLeft="8dp"
            android:maxLength="11"
            android:textSize="14sp"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#C9CDCC"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp">
        <TextView
            android:id="@+id/txtLabel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="邀请码："
            style="@style/txt_style_content_black"

            android:layout_centerVertical="true" />
        <EditText
            android:id="@+id/eTxtVerificationCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:background="@null"
            android:hint="请输入邀请码（代码找）"
            android:textSize="14sp"
            android:inputType="number"
            android:maxLength="4"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/txtLabel"
            android:layout_marginLeft="20dp"/>
        <!--<TextView-->
            <!--android:id="@+id/btnGetVerificationCode"-->
            <!--android:layout_width="100dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:text="获取验证码"-->
            <!--android:textSize="@dimen/btn_txt_size"-->
            <!--android:textColor="@color/textcolor_white_selector"-->
            <!--android:gravity="center"-->
            <!--android:background="@drawable/button_dis"-->
            <!--android:layout_marginTop="6dp"-->
            <!--android:layout_marginBottom="6dp"-->
            <!--android:layout_alignParentRight="true"/>-->
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#C9CDCC" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="密码："
            style="@style/txt_style_content_black"/>

        <EditText
            android:id="@+id/eTxtPassWd"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:background="@null"
            android:hint="请输入6~16位密码"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:maxLength="16"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#C9CDCC"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="确认密码："
            style="@style/txt_style_content_black"/>
        <EditText
            android:id="@+id/eTxtConfirnPassWd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:background="@null"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:maxLength="16"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#C9CDCC"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/chkAgreement"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@null"
            android:checked="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/checkbox_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:text="我已阅读并同意"
            android:textColor="#858585"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/txtAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnRegest"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="注册"
        android:textSize="14sp"
        android:textColor="@color/textcolor_white_selector"
        android:background="@drawable/icon_button"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />
</LinearLayout>
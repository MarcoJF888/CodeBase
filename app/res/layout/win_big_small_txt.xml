<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UILibrary.TextViewAnimAct">


    <TextView
        android:id="@+id/txtTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"/>

    <com.zjf.myself.codebase.view.NumberAnimTextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"/>

    <com.zjf.myself.codebase.view.NumberAnimTextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textStyle="italic"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"/>

    <com.zjf.myself.codebase.view.NumberAnimTextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnStart"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="start"/>

    <com.zjf.myself.codebase.view.MarqueeText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:singleLine="true"
        android:text="我很长的,  我很长的,  我很长的,  我很长的,  我很长的,  我很长的,  我很长的,  "/>
    <com.zjf.myself.codebase.view.MarqueeText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:singleLine="true"
        android:text="我也是啊,你牛逼啥。 我也是啊,你牛逼啥。 我也是啊,你牛逼啥。 我也是啊,你牛逼啥。 "/>

</LinearLayout>